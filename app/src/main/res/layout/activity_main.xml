<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#C5A5A6"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELLCOME"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif-monospace"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO"
            android:textSize="30dp"
            android:padding="10dp"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION GO"
            android:textSize="30dp"
            android:padding="10dp"
            android:fontFamily="serif-monospace"/>
        <TextView
            android:maxLines="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
You have to accept for this app use your location!
we can get your location and your old location infomation go run the app"
            android:layout_below="@id/name"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:fontFamily="serif-monospace"
            android:textColor="#000"
            android:padding="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_grant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif-monospace"
        android:textColor="#f90"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:text="START YOUR EXPERIENCE"
        />
</RelativeLayout>